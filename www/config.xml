<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0"
	id="com.manicware.verbal.touch" version="1.0.0">
	<name>Verbal Touch</name>

	<description>
		A sample Apache Cordova application that responds to the
		deviceready
		event.
	</description>

	<author href="http://www.eclipse.org/thym" email="thym-dev@eclipse.org">
		Eclipse.org -
		Thym
	</author>

	<content src="index.html" />

	<access origin="*" />
	<preference name="fullscreen" value="true" />
	<preference name="webviewbounce" value="true" />

	<feature name="App">
		<param name="android-package" value="org.apache.cordova.App" />
	</feature>
	<feature name="File">
		<param name="android-package" value="org.apache.cordova.file.FileUtils" />
		<param name="onload" value="true" />
		<param name="ios-package" value="CDVFile" />
	</feature>
	<feature name="Capture">
		<param name="android-package" value="org.apache.cordova.mediacapture.Capture" />
		<param name="ios-package" value="CDVCapture" />
		<param name="id" value="org.apache.cordova.media-capture" />
	</feature>
	<feature name="SpeechSynthesis">
		<param name="android-package" value="org.apache.cordova.speech.SpeechSynthesis" />
		<param name="id" value="org.apache.cordova.speech.speechsynthesis" />
	</feature>

</widget>
